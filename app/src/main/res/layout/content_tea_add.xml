<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".TeaAdd"
    tools:showIn="@layout/activity_tea_add">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/ic_launcher" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/ff"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:text="Tea Name:"
                    android:layout_margin="8dp"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:layout_weight="1"

                    />


                <EditText
                    android:id="@+id/edit_tea_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textMultiLine"

                    />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView33"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:text="Brewing Time:"
                    android:layout_margin="8dp"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:layout_weight="1"

                    />


                <EditText
                    android:id="@+id/edit_tea_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_margin="8dp"
                    android:ems="10"
                    android:layout_weight="1"


                    />

            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            >

            <EditText
                android:id="@+id/edit_tea_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:text="Tap to enter tea description.."
                android:maxLength="128"
                android:inputType="textMultiLine"
                android:layout_weight="1"
                android:gravity="top"
                android:layout_marginHorizontal="8dp"


                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/texstViseew3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:text="Temp(F):"
                    android:layout_margin="8dp"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:layout_weight="1"

                    />


                <EditText
                    android:id="@+id/edit_tea_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_margin="8dp"
                    android:ems="10"
                    android:layout_weight="1"

                    />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViedew3ew3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:text="Caffeine(mg):"
                    android:layout_margin="8dp"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:layout_weight="1"

                    />


                <EditText
                    android:id="@+id/edit_tea_caffeine"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_margin="8dp"
                    android:ems="10"
                    android:layout_weight="1"

                    />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            >

            <Button
                android:id="@+id/add_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Add" />

        </RelativeLayout>




    </LinearLayout>


</android.support.constraint.ConstraintLayout>